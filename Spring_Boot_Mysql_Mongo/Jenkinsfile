pipeline {
   agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
   stages {
        stage('Clean') {
            steps {
                  echo 'maven cleaning...............'
            }
        }
        stage('Build') {
            steps {
                  echo 'maven building...............'
                  sh 'mvn clean'
            }
        }
    }
   tools {
    maven 'mvn'
    jdk 'Sun Java 8'
  }
  
}
