pipeline {
   agent any
   tools {
    maven 'maven'
    jdk 'Sun Java 8'
  }
   stages {
        stage('Clean') {
            steps {
                  echo 'mvn cleaning...............'
                  sh 'mvn --version'
                  sh 'mvn clean'
            }
        }
        stage('Build') {
            steps {
                echo 'maven building...............'
                sh 'mvn -U -B clean install -DPROD_HOME=/home/re50hertz/re-home'
            }
        }
    }
   
  
}
