pipeline {
    agent any
    tools {
        maven 'maven' 
    }
    stages {
        stage('clean') {
            steps {
                sh 'mvn --version'
                sh 'cd Spring_Boot_Mysql_Mongo && mvn clean'
            }
        } 
     stage('Quality Analysis') {
      parallel {
        stage('Integration Test') {
          agent any
          steps {
            echo 'Run integration tests here...'
          }
        }  
      stage("SonarQube analysis") {
         steps {
           echo 'SonarQube analysis...' 
           sh 'cd Spring_Boot_Mysql_Mongo && mvn clean compile sonar:sonar -Dsonar.host.url=http://sonarqube:9000   -Dsonar.login=370c0a2376851662baf405072c1375322bdbe24f'
          }
       }
      }
       }
       
         stage('build') {
            steps {
                sh 'mvn --version'
                sh 'cd Spring_Boot_Mysql_Mongo && mvn clean install -Dmaven.test.skip=true'
            }
        }
        
      stage('Build and Publish Image') {
      steps {
        echo 'Build and Publish Image...' 
      }
    }
    stage('Deploy Image') {
      steps {
           echo 'Deploy Image...'                                                                                       
      }
    }
        
    }
    
    environment {
    IMAGE = 'db'
    //IMAGE = readMavenPom().getArtifactId()
    VERSION = readMavenPom().getVersion()
    SERVER_MODE = 'dev'
  }
    
    options {
    timestamps()
  }
    
}
